pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Correct git step with branch specified
                git branch: 'main', url: 'https://github.com/chauhanpranay19/NewsWebsite.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}

