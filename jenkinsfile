pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git branch: 'main', url: 'https://github.com/chauhanpranay19/NewsWebsite.git'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // You can add actual test commands here later if necessary
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "newswebsite:latest"  // Name for your Docker image
                    echo "Building Docker image ${imageName}..."

                    // Build the Docker image using the Dockerfile in the repository
                    sh """
                    docker build -t ${imageName} .
                    """
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                script {
                    def containerName = "newswebsite_container"
                    
                    // Stop and remove any existing container with the same name
                    echo "Stopping and removing existing container ${containerName} if it exists..."
                    sh """
                    docker ps -q --filter name=${containerName} | grep . && docker stop ${containerName} || echo No running container to stop
                    docker ps -a -q --filter name=${containerName} | grep . && docker rm ${containerName} || echo No container to remove
                    """

                    // Run a new container from the built image
                    echo "Deploying Docker container ${containerName}..."
                    sh """
                    docker run -d --name ${containerName} -p 8080:80 ${imageName}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
