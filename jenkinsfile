pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/chauhanpranay19/NewsWebsite.git'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add actual test commands here if needed
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                // Add actual deployment steps here if needed
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
